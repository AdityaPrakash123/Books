@model Category

<h1>Delete Category</h1>


<form method="post">

    <div class="border p-3 mt-4">
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled/>
            <span asp-validation-for="Name"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled/>
            <span asp-validation-for="DisplayOrder"></span>
        </div>

        <div class="row">
            <div class="col-lg-3 col-6">
                <button class="btn btn-primary form-control" type="submit">Delete</button>
            </div>

            <div class="col-lg-3 col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
            </div>

        </div>
    </div>      
</form>