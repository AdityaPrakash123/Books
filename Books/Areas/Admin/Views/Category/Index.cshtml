@model List<Category>


<div class="container">
    <div class="row pt-4 pb-3 align-items-center">
        <div class="col">
            <h1 class="text-primary">Category List</h1>
        </div>

        <div class="col text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"> <i class="bi bi-plus-circle"></i> Create</a>
        </div>
    </div>
</div>
 

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Buttons</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var category in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                        
                        <form asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                            <button class="btn btn-danger mx-2" type="submit">Delete</button>
                        </form>
                        @*<a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Delete</a>*@
                     </div>
                </td>
            </tr>
        }
    </tbody>
</table>