@model ProductVM
<h1 class="text-center">Create Product</h1>



<form method="post">
    <div class="mb-2">  
        <label asp-for="Product.Title"></label>
        <input class="form-control" asp-for="Product.Title" />
        <span asp-validation-for="Product.Title"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Product.Description"></label>
        <textarea class="form-control" asp-for="Product.Description"></textarea>
        <span asp-validation-for="Product.Description"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Product.ISBN"></label>
        <input class="form-control" asp-for="Product.ISBN" />
        <span asp-validation-for="Product.ISBN"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Product.Author"></label>
        <input class="form-control" asp-for="Product.Author" />
        <span asp-validation-for="Product.Author"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Product.Price"></label>
        <input class="form-control" asp-for="Product.Price" />
        <span asp-validation-for="Product.Price"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Product.CategoryId">Category</label>
        <select class="form-select" asp-for="Product.CategoryId" asp-items="@Model.CategoryList">
            <option disabled selected>--Select Category--</option>
        </select>
        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
    </div>

    <div class="btn-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary mx-2">Back to List</a>
    </div>
</form>