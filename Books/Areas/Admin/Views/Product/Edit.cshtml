@model Product

<h1>Edit Product</h1>



<form method="post">

    <input asp-for="Id" hidden />

    <div class="mb-2">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description"></span>
    </div>

    <div class="mb-2">
        <label asp-for="ISBN"></label>
        <input class="form-control" asp-for="ISBN" />
        <span asp-validation-for="ISBN"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Author"></label>
        <input class="form-control" asp-for="Author" />
        <span asp-validation-for="Author"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
        <span asp-validation-for="Price"></span>
    </div>

    <div class="btn-group">
        <button type="submit" class="btn btn-primary mx-2">Edit</button>
        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary mx-2">Back to List</a>
    </div>

</form>
