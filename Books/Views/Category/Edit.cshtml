@{
}

@model Category

<h1>Update Category</h1>

<form method="post">
    <input asp-for="Id" hidden/> @*To know which one is being edited*@
    <div class="border p-3 mt-4">
        <div class="mb-3 p-1">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>

        <div class="mb-3 p-1">
            <label asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder" />
            <span asp-validation-for="DisplayOrder"></span>
        </div>

        <div class="row">
            <div class="col-lg-3 col-6">
                <button class="btn btn-primary form-control" type="submit">Update</button>
            </div>
            <div class="col-lg-3 col-6">
                <a class="btn btn-outline-secondary form-control" asp-controller="Category" asp-action="Index">Back To List</a>
            </div>
        </div>
    </div>
    

</form>
